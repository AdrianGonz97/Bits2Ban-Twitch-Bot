{
    "name": "bits2ban-twitch-bot",
    "version": "1.2.2",
    "description": "",
    "main": "app.js",
    "scripts": {
        "start:dev": "nodemon",
        "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/app.js",
        "build": "yarn clean && tsc -p . && yarn copy-files",
        "clean": "rm -rf ./dist",
        "copy-files": "cp -r ./src/pages/ ./dist/src",
        "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "build:release": "rm -rf ./releases/src && yarn build && cp -r ./dist/src/ ./releases/src && zip -r release.zip ./releases"
    },
    "author": "",
    "license": "GPL-3.0",
    "exports": "./dist/app.js",
    "dependencies": {
        "axios": "^0.24.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "module-alias": "^2.2.2",
        "nedb": "^1.8.0",
        "tmi.js": "^1.8.5",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/nedb": "^1.8.12",
        "@types/node": "^16.11.9",
        "@types/tmi.js": "^1.8.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.2"
    },
    "_moduleAliases": {
        "$src": "src/",
        "$class": "src/classes/",
        "$logger": "src/logger/index"
    }
}
